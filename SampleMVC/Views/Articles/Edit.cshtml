@model MyWebFormApp.BLL.DTOs.ArticleDTO

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Articles Page</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Article Page</h6>
            </div>
            <div class="card-body">

                <form method="post" action="/Articles/Edit">
                    <div class="form-group">
                        <label for="ArticleID">ArticleID :</label>
                        <input type="text" class="form-control" name="ArticleID" readonly value="@Model.ArticleID" />
                    </div>
                    <div class="form-group">
                        <label for="ArticleID">CategoryID :</label>
                        <input type="text" class="form-control" name="ArticleID" readonly value="@Model.CategoryID" />
                    <div class="form-group">
                        <label for="CategoryName">Title :</label>
                        <input class="form-control" type="text" id="Title" name="Title" value="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryName">Detail :</label>
                        <input class="form-control" type="text" id="Details" name="Details" value="@Model.Details" />
                    </div>
                    <div class="form-group">
                        <label for="IsApproved">Approve :</label>
                        <input type="checkbox" id="IsApproved" name="IsApproved" value="true" value="@Model.IsApproved" />
                    </div>
                    <div class="form-group">
                        <label for="Pic">Upload Picture :</label>
                        <input class="form-control" type="text" id="formFile" name="Pic" value="@Model.Pic">
                    </div>

                    <input type="submit" class="btn btn-primary btn-sm" value="Submit" />
                </form>
            </div>
        </div>
    </div>
</div>
